<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Main">
		<item label="Terminal">
			<action name="Execute">
				<execute>
					roxterm
				</execute>
			</action>
		</item>
		<item label="Emacs">
			<action name="Execute">
				<execute>
					emacs
				</execute>
			</action>
		</item>
		<item label="FileManager">
			<action name="Execute">
				<execute>
					rox-filer
				</execute>
			</action>
		</item>
		<item label="Firefox">
			<action name="Execute">
				<execute>
					firefox
				</execute>
			</action>
		</item>
		<separator/>
		<menu id="setting" label="Setting">
			<item label="OpenBox Configure Editor">
				<action name="Execute">
					<execute>
						obconf
					</execute>
				</action>
			</item>
			<item label="OpenBox Menu Editor">
				<action name="Execute">
					<execute>
						obmenu
					</execute>
				</action>
			</item>
			<item label="NVIDIA graphic config">
				<action name="Execute">
					<execute>
						nvidia-settings
					</execute>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="system" label="System">
			<item label="Restart Openbox">
				<action name="Restart">
					<prompt>
						yes
					</prompt>
				</action>
			</item>
			<item label="Logout">
				<action name="Exit"/>
			</item>
			<item label="Reboot">
				<action name="Execute">
					<execute>
						sudo /sbin/reboot
					</execute>
				</action>
			</item>
			<item label="Halt">
				<action name="Execute">
					<execute>
						sudo /sbin/poweroff
					</execute>
				</action>
			</item>
		</menu>
	</menu>
</openbox_menu>
